
TARGET = bin/run
SRC = $(wildcard src/*.c)
OBJ = $(patsubst src/%.c, obj/%.o, $(SRC))

clean: 
	rm -f bin/*
	rm -f obj/*.o

default: $(TARGET)

helptest: clean default
	./bin/run -h

inline: clean default
	./bin/run -i ">>>+++."

saymyname: clean default 
	./bin/run -i ">+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++.>++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++.>++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++.>+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++.>+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++.>++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++."

printtest: clean default 
	./bin/run -i ">+++++++++++++++++++++++++++++++++++++++++++++++++."

printtest2: clean default 
	./bin/run -i ">+++++++++++.>++++++++++++++++++++++++++++++++++++++++"

ahmadtest: clean default 
	./bin/run -i "+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++.+++++++.+++++.------------.+++."


run: clean default
	./$(TARGET)

$(TARGET): $(OBJ)
	gcc -o $@ $?

obj/%.o : src/%.c
	gcc -c $< -o $@ -Iinclude -DDEBUG
